            <div class="popup__footer">
                <button id="stop-newsletter-suggestion" data-url="{{ path('app_user_stopnewslettersuggestion') }}" class="button-link"><small><i>{{ 'Ne plus afficher ce message'|gTrans }}</i></small></button>
            </div>
        </div>
    {% endif %}
{% endblock %}