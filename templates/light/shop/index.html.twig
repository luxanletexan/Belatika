{% extends shop_settings.template ~ "/layout.html.twig" %}
{% block meta_title %}{{ 'Bijoux fantaisie'|gTrans }}{% endblock %}
{% block head %}
    <link rel="canonical" href="{{ absolute_url(path('app_shop_index')) }}">
    <meta name="description" content="{{ "Bijoux uniques pour des femmes d'exceptions. D√©couvrez les bijoux de la boutique en ligne de Belatika. Un large choix de boucles d'oreilles, colliers, bagues et bracelets cr√©√©s avec passion √† des prix tous doux."|gTransDB }}">
    {{ encore_entry_script_tags('app_shop_index') }}
    <meta property="og:type" content="website">
